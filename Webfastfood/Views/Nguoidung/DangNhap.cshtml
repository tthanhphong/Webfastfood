        </tr>
        <tr style="height:40px">
            <td>
                Mật khẩu:
            </td>
            <td>
                @Html.Password("MatKhau")
                @ViewData["loi2"]
            </td>
        </tr>
        
        <tr style="height:40px">
            <td>
            </td>
            <td>
                <input type="submit" value="Đăng Nhập" />
                
            </td>
        </tr>
    }
</table>

