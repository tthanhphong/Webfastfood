@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h4 style="color:red">@ViewBag.ThongBao </h4>
<table align="center">
    <h2>ĐĂNG NHẬP</h2>
